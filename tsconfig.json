{
  "extends": "./node_modules/@jupiterone/typescript-tools/config/typescript-node12",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@j1_config/*": ["src/config/*"],
      "@j1_create_catalog/*": ["src/create-catalog/*"],
      "@j1_utils/*": ["src/utils/*"]
     },
     "lib": ["ES2020"]
  },
  "include": [
    "src/**/*.ts",
    "deploy/src/**/*.ts",
    "test/**/*.ts",
    "tools/**/*.ts",
    "jest.*.ts",
    "jest.*.js",
    "*.config.js",
    "webpack-transform.js"
  ],
  "exclude": ["**/*.bak/**/*.ts"]
}